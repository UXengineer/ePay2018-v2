
@{
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
    ViewBag.PartnerDomainURL = "https://epay.propay.com";
    ViewBag.WebsiteURI = "/Login/Index";
    ViewBag.Title = "Login"; /* 65 CHARACTERS MAXIMUM */
    ViewBag.Description = "Description"; /* 140 CHARACTERS MAXIMUM */

    //PROPAY THEME
    //ViewBag.Partner = "ProPay";
    //ViewBag.PartnerTheme = "Default";
    //ViewBag.MainColor = "#0080a6"; //PROPAY BLUE
    //ViewBag.ButtonColor = "#9fc163"; //BUTTON COLOR
    //ViewBag.ButtonHoverColor = "#8ead4d"; //BUTTON COLOR
    //ViewBag.ButtonTextColor = "#FFFFFF"; //BUTTON TEXT COLOR
    //ViewBag.ButtonHoverTextColor = "#FFFFFF"; //BUTTON TEXT COLOR

    //MARY KAY THEME
    ViewBag.Partner = "Mary Kay";
    ViewBag.PartnerTheme = "MaryKay";
    ViewBag.MainColor = "#ef477e"; //MARYKAY PINK
    ViewBag.ButtonColor = "#ef477e"; //BUTTON COLOR
    ViewBag.ButtonHoverColor = "#f7a7a6"; //BUTTON COLOR
    ViewBag.ButtonTextColor = "#FFFFFF"; //BUTTON TEXT COLOR
    ViewBag.ButtonHoverTextColor = "#FFFFFF"; //BUTTON TEXT COLOR


    /*CUSTOM VARIABLES*/
    ViewBag.PanelHeaderLabel = "Customer Login";
    ViewBag.UsernameOrEmailPlaceholder = "Username or Email";
    ViewBag.DefaultOptionDDL = "English - United States";
    ViewBag.FirstLangaugeOptionDDL = "English - Great Britain";
    ViewBag.SecondLangaugeOptionDDL = "Español - South America";
    ViewBag.ThirdLangaugeOptionDDL = "French - Canada";
    ViewBag.SubmitButtonLabel = "SUBMIT";
    ViewBag.ForgotUsernameLabel = "Forgot Your Username?";
}

@section metatags {
    <title>@Html.Raw(ViewBag.Title)</title>
    <meta name="description" content="@Html.Raw(ViewBag.Description)" />
    <meta name="robots" content="index,follow">
    <meta name="author" content="@Html.Raw(ViewBag.Partner)" />
    <meta name="copyright" content="@Html.Raw(ViewBag.Partner)" />

    <style>
        #custom-theme {position:relative;text-align:center;width: 100%;background-color:#E4E8E6;
            background-image:url('../../App_Themes/@ViewBag.PartnerTheme/images/hero.jpg');
            background-position:center;-webkit-background-size:cover;-moz-background-size: cover;background-size:cover;-o-background-size: cover;}
        #login-header {color:@Html.Raw(ViewBag.MainColor);font-size:27px;font-weight:600;text-transform: uppercase;margin:15px auto 15px auto;}

        .custom-btn:hover, .custom-btn:focus {text-decoration:none;background-position:0 -15px;transition:background-position .1s linear;background-color: @Html.Raw(ViewBag.ButtonColor);color: @Html.Raw(ViewBag.ButtonHoverTextColor);}
        .custom-btn {background-color: @Html.Raw(ViewBag.ButtonColor);border-color: @Html.Raw(ViewBag.ButtonColor);color: @Html.Raw(ViewBag.ButtonHoverTextColor);text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);background-color: @Html.Raw(ViewBag.ButtonColor);background-image: linear-gradient(to bottom, @Html.Raw(ViewBag.ButtonColor), @Html.Raw(ViewBag.ButtonColor));
                     background-repeat: repeat-x;filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff@Html.Raw(ViewBag.ButtonColor)', endColorstr='#ff@Html.Raw(ViewBag.ButtonColor)', GradientType=0);border-color: @Html.Raw(ViewBag.ButtonColor) @Html.Raw(ViewBag.ButtonColor) @Html.Raw(ViewBag.ButtonColor);
                     border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);}
        .custom-btn:active {background-color: @Html.Raw(ViewBag.ButtonColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.active {background-color: @Html.Raw(ViewBag.ButtonColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.active:hover {background-color: @Html.Raw(ViewBag.ButtonHoverColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.disabled:hover {background-color: @Html.Raw(ViewBag.ButtonHoverColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.disabled:focus {background-color: @Html.Raw(ViewBag.ButtonHoverColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.disabled:active {background-color: @Html.Raw(ViewBag.ButtonColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
        .custom-btn.disabled.active {background-color: @Html.Raw(ViewBag.ButtonColor);border-color: @Html.Raw(ViewBag.ButtonColor);}
    </style>

    @*-- fb meta --*@
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="@Html.Raw(ViewBag.Description)" />
    <meta property="og:locale" content="en_US" />
    @*-- make sure to include the other languages targeted by the partner below --*@
    <meta property="og:url" content="@Html.Raw(ViewBag.PartnerDomainURL)/@Html.Raw(ViewBag.WebsiteURI)" />
    <meta property="og:image" content="@Html.Raw(ViewBag.PartnerDomainURL)/App_Themes/@ViewBag.PartnerTheme/images/facebook-share.png" />@*IMAGE REQUIREMENTS: 1200X1200 or 600X315 (minimum) with Absolute URI Path*@

    @*-- twitter meta --*@
    <meta name="twitter:title" content="@Html.Raw(ViewBag.Title)" />@*Maxlength 70 Chars*@
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content="@Html.Raw(ViewBag.Description)" />
    <meta name="twitter:url" content="@Html.Raw(ViewBag.PartnerDomainURL)/@Html.Raw(ViewBag.WebsiteURI)" />
    <meta name="twitter:image" content="@Html.Raw(ViewBag.PartnerDomainURL)/App_Themes/@ViewBag.PartnerTheme/images/twitter-share.png" />@*IMAGE REQUIREMENTS: 440x220 & <= 1MB with Absolute URI Path*@
    <meta name="twitter:site" content="@Html.Raw(ViewBag.TwitterHandle)" />
}

@{
    Html.RenderPartial("_TopNavbarLoggedOut");
}

<div id="custom-theme">
    <div class="custom-header-content">
        <div class="inner">
            <div class="container">
                <div id="login-top-spacer" class="hidden-sm hidden-xs"></div>
                <div class="col-lg-12 col-md-12">
                    <div class="col-lg-7 col-md-7 hidden-sm hidden-xs">
                        <img id="MainLogonImg" src="~/App_Themes/@ViewBag.PartnerTheme/images/main-logo.png" class="img-responsive center-margins" alt="@Html.Raw(ViewBag.Partner)" />
                    </div>
                    <div class="col-lg-5 col-md-5">
                        <div class="panel-admin">
                            <div class="panel-inner small-panel">
                                <div class="clearfix">
                                    <img src="~/App_Themes/@ViewBag.PartnerTheme/images/logo.png" class="img-responsive center-margins" alt="logo" />
                                </div>
                                <hr class="green" />
                                <div class="clearfix input-group">
                                    <div id="SignInError" class="display-none">
                                        <div class="alert alert-danger" role="alert">
                                            <span class="f13">
                                                <i class="fa fa-warning pr5"></i><strong>Email Format Incorrect!</strong><br />
                                                The email is formatted incorrectly. Please re-enter the email and try again!
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <h3 id="login-header">@Html.Raw(ViewBag.PanelHeaderLabel)</h3>
                                <div class="clearfix pt5"></div>
                                <script type='text/javascript'>
                                    //<![CDATA[
                                    window.onload = function () {
                                        $(document).ready(function () {
                                            $("#LoginLogicPath").change(function () {
                                                var selected = $(this).children(":selected").text();

                                                switch (selected) {
                                                    case "Unknown Devices":
                                                        $("#UserLoginInForm").attr('action', '/Login/Unknown-Device');
                                                        break;
                                                    case "Known Devices":
                                                        $("#UserLoginInForm").attr('action', '/Login/Password');
                                                        break;
                                                    //case "MS-Access":
                                                    //  $("#DashboardSelection").attr('action', 'msaccess.html');
                                                    //  break;
                                                    default:
                                                        $("#UserLoginInForm").attr('action', '#');
                                                }
                                            });

                                            //Function For Back Button
                                            $(".back").click(function () {
                                                parent.history.back();
                                                return false;
                                            });
                                        });

                                    }//]]>
                                </script>
                                <form id="UserLoginInForm" name="UserLoginForm" autocomplete="off" method="POST">
                                    <div class="input-group">
                                        <span class="input-group-addon input-field-border-light-solid"><i class="fa fa-user plr1 admin-user-icon-color"></i></span>
                                        <input type="text" id="login-username" class="form-control input-block-level admin-login-email" placeholder="@Html.Raw(ViewBag.UsernameOrEmailPlaceholder)" maxlength="75" aria-describedby="Email" required />
                                    </div>
                                    <div class="clearfix pt10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon input-field-border-light-solid"><i class="fa fa-globe plr0 admin-language-icon-color"></i></span>
                                        <select id="language" class="form-control input-field-border-light-solid" data-live-search="true" title="Please select a language">
                                            <option selected="selected" value="EnglishUS">@Html.Raw(ViewBag.DefaultOptionDDL)</option>
                                            <option value="EnglishGB">@Html.Raw(ViewBag.FirstLangaugeOptionDDL)</option>
                                            <option value="Spanish419">@Html.Raw(ViewBag.SecondLangaugeOptionDDL)</option>
                                            <option value="FrenchCA">@Html.Raw(ViewBag.ThirdLangaugeOptionDDL)</option>
                                        </select>
                                    </div>
                                    <div class="clearfix pt10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon border-red-solid"><i class="fa fa-code-fork color-red"></i></span>
                                        <select id="LoginLogicPath" class="form-control border-red-solid">
                                            <option class="color-red">Unknown and Known Device Path</option>
                                            <option class="color-red">Unknown Devices</option>
                                            <option class="color-red">Known Devices</option>
                                        </select>
                                    </div>
                                    <div class="clearfix pt10"></div>
                                    <div class="align-text-center form-horizontal">
                                        <label for="RememberComputercb" class="">
                                            <!--remember-->
                                            <input id="RememberComputercb" type="checkbox" name="Remember" value="" class="color-light-gray" />
                                            <!--remember-my-computer-->
                                            Remember me on this computer
                                        </label>
                                    </div>
                                    <div class="clearfix pt30"></div>
                                    <button id="signInButton" type="submit" onclick="dataLayer.push({'pageTitle': '@Html.Raw(ViewBag.Title)','event': '@Html.Raw(ViewBag.SubmitButtonLabel)'});" class="btn btn-lg custom-btn">
                                        <span class="text-uppercase strong plr15"><i class="fa fa-lock pr5"></i>@Html.Raw(ViewBag.SubmitButtonLabel)</span>
                                    </button>
                                </form>
                                <div class="clearfix pt5"></div>
                                <hr class="green" />
                                <div class="clearfix pt5"></div>
                                <div class="align-text-center">
                                    <a id="ForgotUsernameLink" href="@Url.Action("Reset-Your-Password", "Login")" onclick="dataLayer.push({'pageTitle': '@Html.Raw(ViewBag.Title)','event': '@Html.Raw(ViewBag.ForgotUsernameLabel)'});" class="partner-link" aria-label="@Html.Raw(ViewBag.ForgotUsernameLabel)" title="@Html.Raw(ViewBag.ForgotUsernameLabel)"><i class="fa fa-question-circle pr5"></i>@Html.Raw(ViewBag.ForgotUsernameLabel)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="login-bottom-spacer" class="hidden-sm hidden-xs"></div>
            </div>
        </div>
    </div>
</div>

