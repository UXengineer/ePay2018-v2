
@{
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
    ViewBag.Partner = "ProPay, Inc";
    ViewBag.PartnerTheme = "Default";
    ViewBag.WebsiteURL = "epay.propay.com";
    ViewBag.WebsiteURI = "Login/Index";
    ViewBag.Title = "Login"; /* 65 CHARACTERS MAXIMUM */
    ViewBag.Description = "Description"; /* 140 CHARACTERS MAXIMUM */

    /*CUSTOM VARIABLES*/
    ViewBag.PanelHeaderLabel = "CUSTOMER LOGIN";
    ViewBag.UsernameOrEmailPlaceholder = "Username or Email";
    ViewBag.DefaultOptionDDL = "English - United States";
    ViewBag.FirstLangaugeOptionDDL = "English - Great Britain";
    ViewBag.SecondLangaugeOptionDDL = "Español - South America";
    ViewBag.SubmitButtonLabel = "SUBMIT";
    ViewBag.ForgotUsernameLabel = "Forgot Your Username?";
}

@section metatags {
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="robots" content="index,follow">
    <meta name="author" content="@ViewBag.Partner" />
    <meta name="copyright" content="@ViewBag.Partner" />

    @*-- fb meta --*@
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:locale" content="en_US" />
    @*-- make sure to include the other languages targeted by the partner below --*@
    <meta property="og:url" content="https://@ViewBag.WebsiteURL/@ViewBag.WebsiteURI" />
    <meta property="og:image" content="https://@ViewBag.WebsiteURL/App_Themes/@ViewBag.PartnerTheme/images/facebook-share.png" />@*IMAGE REQUIREMENTS: 1200X1200 or 600X315 (minimum) with Absolute URI Path*@

    @*-- twitter meta --*@
    <meta name="twitter:title" content="@ViewBag.Title" />@*Maxlength 70 Chars*@
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content="@ViewBag.Description" />
    <meta name="twitter:url" content="https://@ViewBag.WebsiteURL/@ViewBag.WebsiteURI" />
    <meta name="twitter:image" content="https://@ViewBag.WebsiteURL/App_Themes/@ViewBag.PartnerTheme/images/twitter-share.png" />@*IMAGE REQUIREMENTS: 440x220 & <= 1MB with Absolute URI Path*@
    <meta name="twitter:site" content="@ViewBag.TwitterHandle" />
}

@{
    Html.RenderPartial("_TopNavbarLoggedOut");
}

<div id="custom-theme">
    <div class="custom-header-content">
        <div class="inner">
            <div class="container">
                <div id="login-top-spacer" class="hidden-sm hidden-xs"></div>
                <div class="col-lg-12 col-md-12">
                    <div class="col-lg-7 col-md-7 hidden-sm hidden-xs">
                        <img id="MainLogonImg" src="~/App_Themes/@ViewBag.PartnerTheme/images/main-logo.png" class="img-responsive center-margins" alt="@ViewBag.Partner" />
                    </div>
                    <div class="col-lg-5 col-md-5">
                        <div class="panel-admin">
                            <div class="panel-inner small-panel">
                                <div class="clearfix">
                                    <img src="~/App_Themes/@ViewBag.PartnerTheme/images/logo.png" class="img-responsive center-margins" alt="logo" />
                                </div>
                                <hr class="green" />
                                <div class="clearfix input-group">
                                    <div id="SignInError" class="display-none">
                                        <div class="alert alert-danger" role="alert">
                                            <span class="f13">
                                                <i class="fa fa-warning pr5"></i><strong>Email Format Incorrect!</strong><br />
                                                The email is formatted incorrectly. Please re-enter the email and try again!
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <h3 id="login-header">@ViewBag.PanelHeaderLabel</h3>
                                <div class="clearfix pt5"></div>
                                <form id="UserLoginInForm" name="UserLoginForm" action="@Url.Action("password", "Login")" autocomplete="off" method="POST">
                                    <div class="input-group">
                                        <span class="input-group-addon input-field-border-light-solid"><i class="fa fa-user plr1 admin-user-icon-color"></i></span>
                                        <input type="text" id="login-username" class="form-control input-block-level admin-login-email" placeholder="@ViewBag.UsernameOrEmailPlaceholder" maxlength="75" aria-describedby="Email" required />
                                    </div>
                                    <div class="clearfix pt10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon input-field-border-light-solid"><i class="fa fa-globe plr0 admin-language-icon-color"></i></span>
                                        <select id="language" class="form-control input-field-border-light-solid" data-live-search="true" title="Please select a language">
                                            <option selected="selected" value="EnglishUS">@ViewBag.DefaultOptionDDL</option>
                                            <option value="EnglishGB">@ViewBag.FirstLangaugeOptionDDL</option>
                                            <option value="Spanish419">@ViewBag.SecondLangaugeOptionDDL</option>
                                        </select>
                                    </div>
                                    <div class="clearfix pt30"></div>
                                    <button id="signInButton" type="submit" onclick="dataLayer.push({'pageTitle': '@ViewBag.Title','event': '@ViewBag.SubmitButtonLabel'});" class="btn btn-lg custom-btn">
                                        <span class="text-uppercase strong plr15"><i class="fa fa-lock pr5"></i>@ViewBag.SubmitButtonLabel</span>
                                    </button>
                                </form>
                                <div class="clearfix pt5"></div>
                                <hr class="green" />
                                <div class="clearfix pt5"></div>
                                <div class="align-text-center">
                                    <a id="ForgotUsernameLink" href="@Url.Action("Reset-Your-Password", "Login")" onclick="dataLayer.push({'pageTitle': '@ViewBag.Title','event': 'Forgot Username Link'});" class="partner-link" aria-label="Forgot Username" title="@ViewBag.ForgotUsernameLabel"><i class="fa fa-question-circle pr5"></i>@ViewBag.ForgotUsernameLabel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="login-bottom-spacer" class="hidden-sm hidden-xs"></div>
            </div>
        </div>
    </div>
</div>

@section pagerequiredscript {
}